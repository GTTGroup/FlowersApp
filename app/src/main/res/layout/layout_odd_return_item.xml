<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_top"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/drawee_cover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            fresco:placeholderImage="@drawable/img_default_item"
            fresco:placeholderImageScaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/color_333333"
            android:text="极品玫瑰新鲜大方"
            android:id="@+id/text_name"
            android:layout_toRightOf="@+id/drawee_cover"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:text="红色 A及 多头 单价:￥35"
            android:id="@+id/text_desc"
            android:layout_below="@+id/text_name"
            android:layout_toRightOf="@+id/drawee_cover"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:background="@color/B3B2B2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:id="@+id/layout_center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货数量:"
            android:textColor="@color/color_666666"
            android:textSize="14sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_sub"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_item_number_left"
                android:scaleType="center"
                android:src="@drawable/btn_min"/>

            <ImageView
                android:id="@+id/image_add"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/text_count"
                android:background="@drawable/bg_item_number_left"
                android:scaleType="center"
                android:src="@drawable/btn_plus"/>

            <TextView
                android:id="@+id/text_count"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:background="@drawable/bg_item_number_middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="0"
                android:layout_marginRight="-2dp"
                android:textColor="@color/color_333333"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:background="@color/B3B2B2"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/layout_return_goods"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货类型:"
            android:id="@+id/left"
            android:textColor="@color/color_666666"
            android:layout_centerVertical="true"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="破损退货"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/left"
            android:layout_centerVertical="true"
            android:textColor="@color/color_333333"
            android:textSize="14sp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:background="@color/B3B2B2"/>

</LinearLayout>