<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:pst="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="44dp"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height">

            <ImageView
                android:id="@+id/btn_top_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/btn_top_back"/>

            <TextView
                android:id="@+id/text_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/title_florists"
                android:textSize="17sp"
                android:singleLine="true"/>

            <ImageView
                android:id="@+id/btn_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_message"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/B2B2B2"
            android:layout_alignParentBottom="true" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_for_florists_item"
                    android:layout_marginLeft="10dp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/drawee_cover"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        fresco:actualImageScaleType="fitXY"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:placeholderImage="@drawable/img_user_avator"/>

                    <TextView
                        android:id="@+id/text_florists_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/color_333333"
                        android:textSize="16dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_for_florists_item"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_666666"
                        android:textSize="14sp"
                        android:text="人天价格："/>
                    <TextView
                        android:id="@+id/text_florists_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#ff0000"
                        android:textSize="14sp"
                        android:text="￥0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_for_florists_item"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_666666"
                        android:textSize="14sp"
                        android:text="服务地区："/>
                    <TextView
                        android:id="@+id/text_florists_service_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_for_florists_item"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_666666"
                        android:textSize="14sp"
                        android:text="服务天数："/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/btn_min"
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/btn_min"
                            android:scaleType="center"
                            android:background="@drawable/bg_item_number_left"/>
                        <ImageView
                            android:id="@+id/btn_plus"
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="111dp"
                            android:background="@drawable/bg_item_number_left"
                            android:src="@drawable/btn_plus"
                            android:scaleType="center"/>
                        <TextView
                            android:id="@+id/text_florists_service_day"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:background="@drawable/bg_item_number_middle"
                            android:textSize="14sp"
                            android:text="0"
                            android:textColor="@color/color_333333"
                            android:gravity="center"
                            android:singleLine="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_for_florists_item">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/color_666666"
                        android:textSize="14sp"
                        android:text="出差费用为每日出差补贴、食宿另外计算"/>
                </LinearLayout>
                <com.do1.flowersapp.widget.PagerSlidingTabStrip
                    android:id="@+id/tab_title"
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:background="@color/F4F4F5"
                    android:textSize="16sp"
                    android:textColor="@color/color_797979"
                    pst:pstsIndicatorColor="@color/FC8600"/>
                <android.support.v4.view.ViewPager
                    android:id="@+id/pager_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="165dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/bg_for_florists_item_2">

                    <TextView
                        android:id="@+id/text_customer_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:textColor="@color/color_666666"
                        android:text="顾客评价(0)"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/ic_right_arrow"/>

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_for_florists_bottom_item">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_collect"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="收藏"
                android:textColor="@color/color_666666"
                android:textSize="15sp"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/btn_add_shop_car"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:background="@color/FF9100"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/btn_buy"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:background="@color/FF5100"
                android:gravity="center"
                android:text="立即购买"
                android:textSize="15sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>