<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FAFAFA">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/DBDBDB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/img_select"/>

        <TextView
            android:id="@+id/text_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:textColor="@color/color_666666"
            android:textSize="14sp"
            android:text="@string/app_name"
            android:singleLine="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:background="@drawable/ic_right_arrow"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/DBDBDB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:background="@drawable/img_select"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/drawee_cover"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            fresco:placeholderImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/img_default_item"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

               <TextView
                android:id="@+id/text_commodity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textSize="15sp"
                android:textColor="@color/color_333333" />

            <TextView
                android:id="@+id/text_commodity_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textSize="11sp"
                android:textColor="@color/color_666666" />

            <TextView
                android:id="@+id/text_commodity_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textSize="11sp"
                android:textColor="@color/color_666666" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="11dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_min"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/btn_min"
                android:scaleType="center"
                android:background="@drawable/bg_item_number_left"/>
            <ImageView
                android:id="@+id/btn_plus"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="51dp"
                android:background="@drawable/bg_item_number_left"
                android:src="@drawable/btn_plus"
                android:scaleType="center"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:background="@drawable/bg_item_number_middle"
                android:textSize="14sp"
                android:text="0"
                android:textColor="@color/color_333333"
                android:gravity="center"
                android:singleLine="true"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/DBDBDB" />

</LinearLayout>